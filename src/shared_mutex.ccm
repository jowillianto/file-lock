module;
#include <concepts>
#include <filesystem>
export module moderna.file_lock:shared_mutex;

namespace moderna::file_lock {
  export template <typename Mutex>
  concept SharedMutex = requires(Mutex m) {
    { m.lock() };
    { m.unlock() };
    { m.try_lock() } -> std::same_as<bool>;
    { m.lock_shared() };
    { m.try_lock_shared() } -> std::same_as<bool>;
    { m.unlock_shared() };
  };
};